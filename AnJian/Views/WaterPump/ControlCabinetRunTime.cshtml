
@{
    Layout = null;
    var remoteControl = @ViewBag.remoteControl ? "red" : "green";
    var centralzedControl = @ViewBag.centralzedControl ? "red" : "green";
    var manualControl = @ViewBag.manualControl ? "red" : "green";
    var autoControl = @ViewBag.autoControl ? "red" : "green";
    var mainFlowControl = @ViewBag.mainFlowControl ? "red" : "green";
    var sublineFlowControl = @ViewBag.sublineFlowControl ? "red" : "green";
}


<div style="text-align: center;display: inline-block">
    <span style="display: block">@ViewBag.Title</span>
    <div style="border:1px solid #B5B5B5;;display:inline-block;background-color:white">
        <div style="border: 1px solid #B5B5B5; margin: 5px; display: table">
            <div style="margin:5px;">
                <div style="display:inline-block;text-align: center;width:80px;vertical-align:super"> 远控&nbsp;&nbsp;&nbsp;提示</div>
                <div style="display:inline-block;border:1px solid #787878;width:20px;height:20px;border-radius:20px;background-color:@remoteControl;"></div>
            </div>
            <div style="margin:5px">
                <div style="display:inline-block;text-align: center;width:80px;vertical-align:super"> 集控&nbsp;&nbsp;&nbsp;提示</div>
                <div style="display:inline-block;border:1px solid #787878;width:20px;height:20px;border-radius:20px;background-color:@centralzedControl;"></div>
            </div>
            <div style="margin:5px">
                <div style="display:inline-block;text-align: center;width:80px;vertical-align:super"> 手动&nbsp;&nbsp;&nbsp;提示</div>
                <div style="display:inline-block;border:1px solid #787878;width:20px;height:20px;border-radius:20px;background-color:@manualControl;"></div>
            </div>
            <div style="margin:5px">
                <div style="display:inline-block;text-align: center;width:80px;vertical-align:super"> 自动&nbsp;&nbsp;&nbsp;提示</div>
                <div style="display:inline-block;border:1px solid #787878;width:20px;height:20px;border-radius:20px;background-color:@autoControl;"></div>
            </div>
            <div style="margin:5px">
                <div style="display:inline-block;text-align: center;width:80px;vertical-align:super"> 主管路提示</div>
                <div style="display:inline-block;border:1px solid #787878;width:20px;height:20px;border-radius:20px;background-color:@mainFlowControl;"></div>
            </div>
            <div style="margin:5px">
                <div style="display:inline-block;text-align: center;width:80px;vertical-align:super"> 备管路提示</div>
                <div style="display:inline-block;border:1px solid #787878;width:20px;height:20px;border-radius:20px;background-color:@sublineFlowControl;"></div>
            </div>
        </div>
    </div>
</div>